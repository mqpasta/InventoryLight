@using TestCore.Helper;
@model IEnumerable<TestCore.Models.Location>

@{
    ViewData["Title"] = "Location";
}

<h2>Locations</h2>
<p>
    @UIHelper.GetButton(Html,"Create New","Create","Location",ButtonType.General)
</p>

<table class="table" id="LocationList">
    <thead>
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.LocationId)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.LocationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWearhouse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.LocationId)
                @Html.DisplayFor(modelItem => item.LocationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wearhouse)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.LocationId })
            </td>
        </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#LocationList').DataTable();
    });
</script>