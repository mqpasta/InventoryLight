@model IEnumerable<TestCore.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Purchase Orders";
}

<h2>Purchase Orders</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="alert-dismissable">
    @Html.ValidationMessage("Error")
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PODate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConvRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RMBRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PKRCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PKRAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RMBAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceivedQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReceived)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseOrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PODate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConvRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RMBRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PKRCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PKRAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RMBAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BalanceQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsReceived)
                </td>
                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseOrderId }) |
                    @Html.ActionLink("Receive", "Index", "Receive", new { id = item.PurchaseOrderId }) |
                    @Html.ActionLink("Delete", "Remove", new { id = item.PurchaseOrderId })
                </td>
            </tr>
        }
    </tbody>
</table>
